<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis-BlogMapper.xml">
    <!--
       namespace 名称空间
       resultType 返回值类型
       id 唯一标识
       #{id} 从传递过来的参数中取id
       -->
    <select id="selectBlog" resultType="com.mybatis.day01test.entity.Employee">
     select * from tbl_employees where id = #{id}
 </select>

</mapper>